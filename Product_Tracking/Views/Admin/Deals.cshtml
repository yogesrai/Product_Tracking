@model IEnumerable<Product_Tracking.Models.ViewModel.Deals>

@{
    ViewBag.Title = "Deals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
        <div class="row">
            <ol class="breadcrumb">
                <li>
                    <a href="#">
                        <em class="fa fa-home"></em>
                    </a>
                </li>
                <li class="active">Deals List</li>
            </ol>
        </div><!--/.row-->

        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Deals List</h1>
            </div>
        </div><!--/.row-->
        <p>
            @Html.ActionLink("Create New", "Deals_data", "Admin", null, new { @class = "btn btn-primary" })
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DealsName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DealsDiscription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DiscountPercent)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.HiddenFor(modelItem => item.DealsId)
                        @Html.DisplayFor(modelItem => item.DealsName)
                    </td>
                    <td width="20%">
                        @Html.DisplayFor(modelItem => item.DealsDiscription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DiscountPercent)<text>%</text>
                    </td>
                    <td>
                        @(item.StartDate.Value.ToString("yyyy-MM-dd"))
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Editdeals", new { id = item.DealsId }, new { @class = "btn btn-info" }) |
                        @*@Html.ActionLink("Details", "Details", new { id = item.DealsId }, new { @class = "btn btn-success" }) |*@
                        @Html.ActionLink("Delete", "deletedeals", new { id = item.DealsId }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>